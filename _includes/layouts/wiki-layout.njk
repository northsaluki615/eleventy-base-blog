---
layout: layouts/base.njk
---
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}

<div class="wiki-container">
  <header class="wiki-header">
    <h1>{{ title }}</h1>
    <p class="meta">Last updated on {{ page.updated | readableDate("MMMM dd, yyyy", "utc") }}</p>
    <p class="meta">Created on {{ page.date | readableDate("MMMM dd, yyyy", "utc") }}</p>
    <ul class="post-metadata">
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
    {%- endfor %}
  </ul>
  </header>

  <article class="wiki-content">
    {{ content | safe }}
  </article>

  <footer class="wiki-footer">
    <nav>
      <ul class="wiki-links">
        <li><a href="/wiki/">All Wiki Articles</a></li>
        <li><a href="/tags/">Tags Index</a></li>
      </ul>
    </nav>
  </footer>
</div>
