---
layout: layouts/base.njk
---
{%- css %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endcss %}
{%- css %}{% include "public/css/prism-diff.css" %}{%- endcss %}
<div class="garden-container">
  <header class="garden-header">
    <h1>{{ title }}</h1>
    <p class="meta">Created on {{ page.date | readableDate("MMMM dd, yyyy", "utc") }}</p>
    <ul class="post-metadata">
      {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
        <li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
      {%- endfor %}
    </ul>
  </header>

  <article class="garden-content">
    {{ content | safe }}
  </article>

<hr>
  {% if backlinks.length > 0 %}
    <section class="linking-here">
      <h2>Articles Linking Here</h2>
      <ul>
        {% for link in backlinks %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}

  <footer class="garden-footer">
    <nav>
      <ul class="garden-links">
        <li><a href="/garden/">All garden Articles</a></li>
        <li><a href="/tags/">Tags Index</a></li>
      </ul>
    </nav>
  </footer>
</div>
