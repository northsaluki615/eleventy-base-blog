---
pagination:
  data: collections.allTags
  size: 1
  alias: tag
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
---
<h1>Tagged “{{ tag }}”</h1>

<div class="posts-list">
{% for post in collections.all | filterByTag(tag) %}
  <div class="post-item">
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p class="post-meta">{{ post.date | readableDate }} - {{ post.data.description }}</p>
  </div>
{% endfor %}
</div>
